<h1>Main Page - Hello Boyos</h1>
<h2>Jar Jar's Above Ground Pool</h2>
<section>
  <h3>Players</h3>
  <%= link_to "Add Player", new_player_path %>
</section>
<section>
  <ul>
    <% @players.each do |player| %>
      <% data = player.get_player_data(player.ally_code) %>
      <%= link_to player.ally_code, player %>
      <img src="<%= data['data']['portrait_image'] %>" alt="">
      <li><%= data['data']['name'] %></li>
      <li><%= data['data']['galactic_power'] %></li>
      <li><%= data['data']['arena_leader_base_id'] %></li>
    <% end %>
  </ul>
</section>
